
@{
    ViewBag.Title = "ModifyFitnessCenter";
    Layout = "~/Views/Shared/_OwnerLayout.cshtml";
}

<h2>ModifyFitnessCenter</h2>
@using WEBProject.Models
@model FitnessCenter

<form action="/FitnessCenter/Modify" id="regForm" method="post">
    <div class="form-group">
        <label for="name">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="@Model.Name" required/>
    </div>
    <div class="form-group">
        <label for="address">Address</label>
        <input type="text" class="form-control" id="address" name="address" value="@Model.Address" required />
    </div>
    <div class="form-group">
        <label for="foundedIn">Founded in:</label>
        <input type="number" class="form-control" id="foundedIn" name="foundedIn" value="@Model.FoundedIn" min="1900" required />
    </div>
    <div class="form-group">
        <label for="monthlyFee">Monthly fee</label>
        <input type="number" class="form-control" id="monthlyFee" name="monthlyFee" value="@Model.MonthlyFee" min="0" required/>
    </div>
    <div class="form-group">
        <label for="yearlyFee">Yearly fee</label>
        <input type="number" class="form-control" id="yearlyFee" name="yearlyFee" value="@Model.YearlyFee" required/>
    </div>
    <div class="form-group">
        <label for="singleSessionFee">Single session fee</label>
        <input type="number" class="form-control" id="singleSessionFee" name="singleSessionFee" value="@Model.SingleSessionFee" min="0" required/>
    </div>
    <div class="form-group">
        <label for="singleSessionTrainerFee">Single session fee (with trainer)</label>
        <input type="number" class="form-control" id="singleSessionTrainerFee" name="singleSessionTrainerFee" value="@Model.SingleSessionTrainerFee" min="0" required/>
    </div>
    <div class="form-group">
        <label for="groupSessionFee">Group session fee</label>
        <input type="number" class="form-control" id="groupSessionFee" name="groupSessionFee" value="@Model.GroupSessionFee" min="0" required/>
    </div>
    <input type="hidden" name="Id" value="@Model.Id" />
    <input type="hidden" name="OwnerId" value="@Model.OwnerId" />
    <div class="form-group">
        <input type="submit" class="btn btn-primary" value="Modify" />
    </div>
</form>

